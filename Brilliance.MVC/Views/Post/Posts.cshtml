@{
    ViewData["Title"] = "Posts";
}

<main class="section">
    <div class="container">
        <h1 class="title-1">Posts page</h1>
        <div class="card">
            <form method="get" asp-action="Posts" class="card-form">
                <div class="input">
                    <select class="input-select" required name="sort" onchange="this.form.submit()">
                        @for(int i = 0; i < 10; ++i)
                        {
                            <option value="@i" >Test - @i</option>
                        }
                    </select>
                    <label class="input-label" for="sort">Sort</label>
                </div>
            </form>
        </div>
        <ul class="projects">
            @for(int i = 0; i < 10; ++i)
            {
                <li class="project">
                    <a href="#">
                        <h3 class="project__title">Title of post</h3>
                    </a>
                </li>
            }
        </ul>
    </div>
</main>