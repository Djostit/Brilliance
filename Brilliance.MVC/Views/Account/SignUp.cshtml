@{
    ViewData["Title"] = "Sign up";
}

@model UserDTO
<main class="section">
    <div class="container">
        <h1 class="title-1">Sign up page</h1>
        <div class="card">
            <form method="post" asp-action="SignInPost" class="card-form">
                <div class="input">
                    <input class="input-field" required type="text" asp-for="Username" name="Username" />
                    <label class="input-label" for="Username">Username</label>
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="input">
                    <input class="input-field" required type="password" id="Password" asp-for="Password" name="Password" />
                    <label class="input-label" for="Password">Password</label>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="action">
                    <button type="submit" class="action-button">Sign up</button>
                </div>
            </form>
            <div class="card-info">
                <p>Already have an account? <a asp-controller="Account" asp-action="SignIn">Sign In</a></p>
            </div>
        </div>
    </div>
</main>